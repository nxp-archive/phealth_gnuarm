	(flpat (patternexpand_1 flpsexp env pctx psloc)) 
	)
    ;; find the field inside the class
    (multiple_iterate_test
     clafields
     (lambda (cfld :long ix)
       (assert_msg "check fld" (is_a cfld class_field))
